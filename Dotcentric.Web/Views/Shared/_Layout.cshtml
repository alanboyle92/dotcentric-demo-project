@using EPiServer.Globalization

<!doctype html>
<html lang="@(ContentLanguage.PreferredCulture?.Name ?? "en")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@Model.MetaData.MetaTags.MetaTitle</title>

    @if (!string.IsNullOrWhiteSpace(Model.MetaData.MetaTags.MetaDescription))
    {
        <meta name="description" content="@Model.MetaData.MetaTags.MetaDescription" />
    }
    @if (!Model.IsErrorPage)
    {
        @Html.CanonicalLink()
        @Html.AlternateLinks()
    }

    <!--Favicon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/favicon.ico">

    <!-- style -->
    <link rel="stylesheet" href="~/assets/css/swiper-bundle.min.css">
    <link href="~/assets/css/tailwind.css" rel="stylesheet">

    <!-- Font Family -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    
    <!-- Clarity -->
    <script type="text/javascript">
        (function (c, l, a, r, i, t, y) {
            c[a] = c[a] || function () { (c[a].q = c[a].q || []).push(arguments) };
            t = l.createElement(r); t.async = 1; t.src = "https://www.clarity.ms/tag/" + i;
            y = l.getElementsByTagName(r)[0]; y.parentNode.insertBefore(t, y);
        })(window, document, "clarity", "script", "o64gce98jy");
    </script>

    <!-- Cloudflare Turnstile -->
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
</head>
<body>

    <!-- wrapper START -->
    <div class="wrapper">

        <!-- Skip Content START -->
        <a href="#two-column-flexible-content" class="skip-to-content" tabindex="0">Skip to main content</a>
        <!-- Skip Content END -->

        @RenderBody()

        <!-- START: DEV ONLY - Shows the current CSS breakpoint-->
        <div class="breakpoint js-breakpoint"></div>
        <div class="grid-visual hidden"></div>
        <!-- END: DEV ONLY -->
    </div>
    <!-- wrapper END -->
    <!-- JavaScript to Import and Insert the Templates -->
    <script src="~/assets/js/lozad.min.js"></script>
    <script src="~/assets/js/swiper-bundle.min.js"></script>   

    @await RenderSectionAsync("FooterScripts", false)

    <script src="~/assets/js/main.js"></script>

</body>

</html>